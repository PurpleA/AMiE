{% extends "AMiEHomeBundle::layout.html.twig" %}

{% block title "Modifier" %}

{% block head %}
Modifier une entreprise partenaire
{% endblock %}

{% block content %}
<div class="row">
	<div class="col-lg-12">
	<form action="{{ path('amie_entreprises_modifierpartenaire', { 'id': id}) }}" method="POST" {{ form_enctype(formPartModif) }}>	
		<div class="panel panel-default">
			<div class="panel-heading">
					<h2>Ajouter une entreprise partenaire</h2>			
			</div>
			<!-- /.panel-heading -->
			<div class="clearfix">
				<div class="panel-body">
					<div class="row">
						<div class="form-group">
						{{ form_label(formPartModif.nom, 'Nom de l\'entreprise partenaire') }}
						{{ form_widget(formPartModif.nom, { 'attr': {'class': 'form-control', 'placeholder': 'Nom'} }) }}
						</div>
						<div class="form-group">
							{{ form_label(formPartModif.url, 'Site officiel de l\'entreprise partenaire') }}
							{{ form_widget(formPartModif.url, { 'attr': {'class': 'form-control', 'placeholder': 'Lien'} }) }}
						</div>
						<div class="form-group">
							{{ form_label(formPartModif.description, 'Description') }}
							{{ form_widget(formPartModif.description, { 'attr': {'class': 'form-control', 'placeholder': 'Description'} }) }}
						</div>
					</div>
					<div class="col-sm-offset-10 col-sm-1">
						<button type="submit" class="btn btn-primary">Valider</button>
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.clearfix -->
		</div>
		<!-- /.panel -->
	</form>
	</div>
	<!-- /.col-lg-12 -->
</div>
<!-- /.row -->
{% endblock %}
