{% extends "AMiEHomeBundle::layout.html.twig" %}

{% block title "Partenaires" %}

{% block head %}
Entreprises partenaires
{% endblock %}

{% block content %}
<div class="row">
	<div class="col-lg-12">
	{% for partenaire in partenaires %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<i class="fa fa-globe fa-fw"></i> {{ partenaire.nom }}
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
				<dl class="dl-horizontal">
					<dt>
						Site officiel
					</dt>
					<dd>
						<a href="{{ partenaire.url }}">{{ partenaire.url }}</a>
					</dd>
				</dl>
				<div class="row">	
					<p>{{ partenaire.description|nl2br }}</p>
				</div>
				<!-- /.row (nested) -->
			</div>
			<!-- /.panel-body -->
		</div>
		<!-- /.panel -->
	{% else %}
		Aucun partenaire actuellement.
	{% endfor %}
	</div>
	<!-- /.col-lg-12 -->	
</div>
<!-- /.row -->
{% endblock %}
